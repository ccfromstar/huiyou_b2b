<div style="width:960px;background-color: #FFFFFF;margin:0 auto;">
    <table style="width: 100%;margin-top: 20px;margin-bottom: 50px;" border="0">
         <tr style="line-height: 25px;">
             <td style="width: 200px;text-align: center;vertical-align: top">
                 <%include optionmenu%>
             </td>
             <td style="vertical-align: top">
                 <table style="width: 110px;margin-top: 0px;" border="0" cellspacing="0">
                     <tr style="line-height: 30px">
                         <td class="tdfooter1" style="background-color: #F7861E;color:#FFFFFF" id="n1" onclick="window.location='loading?page=optionaccount'">财务信息</td>
                     </tr>
                 </table>


                 <div style="background-image: url('/images/ora.jpg');width: 100%;height: 3px;"></div>

                 <%if(user[0].role_company_admin!=1){%>

                 <div style="margin-top: 5px;"><b>账户名：</b><%=company[0].account_name%></div>
                 <div style="margin-top: 5px;"><b>账号：&nbsp;&nbsp;&nbsp;</b><%=company[0].account_number%></div>
                 <div style="margin-top: 5px;"><b>开户行：</b><%=company[0].bank%></div>

                 <%}else{%>
                        <form method="post">
                            <div style="margin-top: 5px;"><b>账户名：</b><input style="width:250px" type="text" name="account_name" value="<%=company[0].account_name%>" /></div>
                            <div style="margin-top: 5px;"><b>账号：&nbsp;&nbsp;&nbsp;</b><input style="width:250px" type="text" name="account_number" value="<%=company[0].account_number%>" /></div>
                            <div style="margin-top: 5px;"><b>开户行：</b><input style="width:250px" type="text" name="bank" value="<%=company[0].bank%>" /></div>
                            <input type="button" value="确认修改" style="margin-top:10px" onclick="document.forms[0].submit();" />
                            <input type="hidden" id="docid" name="docid" value="<%=company[0].id%>" />
                            <input type="hidden" name="publishid" id="publishid"  value="<%=company[0].name+"(id:"+company[0].id+")的"+user[0].name+"(id:"+user[0].id+")"%>" />
                        </form>
                 <%}%>

                 <br/>
             </td>
         </tr>
    </table>
    <input id="info" style="display:none"  value="<%=e%>" />
</div>