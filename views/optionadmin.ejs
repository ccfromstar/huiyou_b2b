<div style="width:960px;background-color: #FFFFFF;margin:0 auto;">
    <form method="post">
    <table style="width: 100%;margin-top: 20px;margin-bottom: 50px;" border="0">
         <tr style="line-height: 25px;">
             <td style="width: 200px;text-align: center;vertical-align: top">
                 <%include optionmenu%>
             </td>
             <td style="vertical-align: top">
                 <table style="width: 400px;margin-top: 0px;" border="0" cellspacing="0">
                     <tr>
                         <td class="tdfooter1"  id="n1" onclick="window.location='loading?page=optioncompany'">公司信息</td>
                         <td class="tdfooter1" style="background-color: #F7861E;color:#FFFFFF" id="n3" onclick="window.location='loading?page=optionadmin'">管理员信息</td>
                         <%
                         var u1 = "";
                         if(user[0].role_company_admin==1){
                             u1 = "子账户信息";
                         }else{
                             u1 = "个人信息";
                         }
                         %>
                         <td class="tdfooter1" id="n2" onclick="window.location='loading?page=option'"><%=u1%></td>
                         <td class="tdfooter1" id="n4" onclick="window.location='loading?page=optionpwd'">修改密码</td>
                     </tr>
                 </table>
                 <div style="background-image: url('/images/ora.jpg');width: 100%;height: 3px;"></div>
                 <table width="600" border="0" style="margin-top: 10px;">
                     <tr style="line-height: 25px;">
                         <td style="width: 80px;"><b>管理员姓名：</b></td>
                         <td><%=user1[0].name%></td>
                     </tr>
                     <tr style="line-height: 25px;">
                         <td style="padding-left: 0px;"><b>所属部门：</b></td>
                         <td><%=user1[0].departmentName%></td>
                     </tr>
                     <tr style="line-height: 25px;">
                         <td style="padding-left: 0px;"><b>职位：</b></td>
                         <td><%=user1[0].position%></td>
                     </tr>
                     <tr style="line-height: 25px;">
                         <td><b>联系电话：</b></td>
                         <td><%=company[0].telephone_area_code%>-<%=user1[0].telephone%></td>
                     </tr>
                     <tr style="line-height: 25px;">
                         <td style="padding-left: 0px;"><b>传真：</b></td>
                         <%var a = company[0].telephone_area_code+"-"+user1[0].fax;if(!a){a="";}%>
                         <td><%=a%></td>
                     </tr>
                     <tr style="line-height: 25px;">
                         <td><b>手机：</b></td>
                         <td><%=user1[0].mobile_phone%></td>
                     </tr>
                     <tr style="line-height: 25px;">
                         <td><b>邮箱：</b></td>
                         <td><%=user1[0].email%></td>
                     </tr>
                 </table>
             </td>
         </tr>
    </table>
    <input id="info" style="display: none" value="<%=error%>" />
    </form>
</div>