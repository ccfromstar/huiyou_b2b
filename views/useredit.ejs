<div style="width:100%;text-align: center">
    <form method="post">
    <table width="300px" style="margin:auto;margin-top: 10px;" border="0">
        <tr>
            <td>姓名</td>
            <td><input class="easyui-validatebox" type="text" id="username" name="username" value="<%=datasource[0].name%>" /></td>
        </tr>
        <tr>
            <td>电子邮件地址</td>
            <td><input class="easyui-validatebox" type="text" id="email" name="email" value="<%=datasource[0].email%>" /></td>
        </tr>
        <tr>
            <td>用户名</td>
            <td><input style="border: none" readonly class="easyui-validatebox" type="text" id="loginname" name="loginname" value="<%=datasource[0].login_name%>" /></td>
        </tr>
        <tr>
            <td>密码</td>
            <td><input class="easyui-validatebox" type="password" id="password" name="password" value="<%=datasource[0].password%>" /></td>
        </tr>
        <tr>
            <td>验证</td>
            <td><input class="easyui-validatebox" type="text" id="certified" name="certified" value="<%=datasource[0].certified%>" /></td>
        </tr>
        <tr>
            <td>激活</td>
            <td><input class="easyui-validatebox" type="text" id="activated" name="activated" value="<%=datasource[0].activated%>" /></td>
        </tr>
        <tr>
            <td>&nbsp;</td>
            <td>&nbsp;</td>
        </tr>
        <tr>
            <td>
            <a href="javascript:void(0)" class="easyui-linkbutton"  onclick="window.parent.closeWin();">关闭</a>
            </td>
            <td>
            <a href="javascript:void(0)" class="easyui-linkbutton"  onclick="updateRecord()">修改</a>
            </td>
        </tr>
    </table>

        <input name="docid" style="display: none" value="<%=datasource[0].id%>" />
    </form>
</div>
